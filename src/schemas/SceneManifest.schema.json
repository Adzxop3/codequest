{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://codequest.dev/schemas/SceneManifest.schema.json",
  "title": "Scene Manifest",
  "description": "Defines the structure and metadata for a CodeQuest Scene",
  "type": "object",
  "required": ["sceneId", "title", "description", "learningObjectives", "files", "validation"],
  "properties": {
    "sceneId": {
      "type": "string",
      "pattern": "^[A-Z][0-9]{2}-[a-z0-9-]+$",
      "description": "Unique identifier for the scene (e.g., 'N00-intro')"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable title of the scene"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000,
      "description": "Detailed description of the scene challenge"
    },
    "learningObjectives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "List of specific learning objectives"
    },
    "files": {
      "type": "object",
      "required": ["solution", "test"],
      "properties": {
        "solution": {
          "type": "string",
          "description": "Path to solution file template"
        },
        "test": {
          "type": "string",
          "description": "Path to test file"
        },
        "readme": {
          "type": "string",
          "description": "Path to README file"
        },
        "hints": {
          "type": "string",
          "description": "Path to hints file"
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional resource files"
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["testCommand"],
      "properties": {
        "testCommand": {
          "type": "string",
          "description": "Command to run tests (e.g., 'node test.js')"
        },
        "requiredFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of files that must exist for validation"
        },
        "bonusCriteria": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/BonusCriterion"
          },
          "description": "Criteria for bonus points"
        },
        "challengeCriteria": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ChallengeCriterion"
          },
          "description": "Criteria for challenge level completion"
        }
      }
    },
    "estimatedMinutes": {
      "type": "number",
      "minimum": 5,
      "maximum": 480,
      "description": "Estimated completion time in minutes"
    },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"],
      "description": "Difficulty level of this scene"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Technology/concept tags"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Prerequisites for this scene"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of this scene manifest"
    }
  },
  "definitions": {
    "BonusCriterion": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["code-pattern", "file-exists", "test-coverage", "performance", "style"],
          "description": "Type of bonus criterion"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the criterion"
        },
        "pattern": {
          "type": "string",
          "description": "Regex pattern to match (for code-pattern type)"
        },
        "file": {
          "type": "string",
          "description": "File path to check (for file-exists type)"
        },
        "threshold": {
          "type": "number",
          "description": "Threshold value (for coverage/performance types)"
        }
      }
    },
    "ChallengeCriterion": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["advanced-implementation", "optimization", "additional-features", "comprehensive-testing"],
          "description": "Type of challenge criterion"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the criterion"
        },
        "requirements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Specific requirements for this challenge"
        }
      }
    }
  }
}