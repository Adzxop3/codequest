{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://codequest.dev/schemas/ActivityPing.schema.json",
  "title": "Activity Ping",
  "description": "Schema for activity pings sent during development",
  "type": "object",
  "required": ["timestamp", "event", "sceneId"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the activity"
    },
    "event": {
      "type": "string",
      "enum": [
        "scene-start",
        "scene-validation",
        "scene-complete",
        "help-request",
        "hint-viewed",
        "file-save",
        "test-run",
        "error-encountered"
      ],
      "description": "Type of activity event"
    },
    "sceneId": {
      "type": "string",
      "pattern": "^[A-Z][0-9]{2}-[a-z0-9-]+$",
      "description": "Scene identifier where activity occurred"
    },
    "userId": {
      "type": "string",
      "description": "User identifier (optional for privacy)"
    },
    "sessionId": {
      "type": "string",
      "description": "Session identifier to group related activities"
    },
    "data": {
      "type": "object",
      "description": "Event-specific data payload",
      "properties": {
        "validationResult": {
          "type": "object",
          "properties": {
            "success": {
              "type": "boolean"
            },
            "status": {
              "type": "string",
              "enum": ["base", "bonus", "challenge"]
            },
            "testsRun": {
              "type": "number"
            },
            "testsPassed": {
              "type": "number"
            },
            "duration": {
              "type": "number",
              "description": "Duration in milliseconds"
            }
          },
          "description": "Validation result data (for scene-validation events)"
        },
        "error": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "stack": {
              "type": "string"
            },
            "code": {
              "type": "string"
            }
          },
          "description": "Error information (for error-encountered events)"
        },
        "filePath": {
          "type": "string",
          "description": "File path (for file-save events)"
        },
        "hintId": {
          "type": "string",
          "description": "Hint identifier (for hint-viewed events)"
        },
        "duration": {
          "type": "number",
          "description": "Duration in milliseconds for timed events"
        }
      }
    },
    "environment": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "string",
          "enum": ["darwin", "linux", "win32"]
        },
        "nodeVersion": {
          "type": "string"
        },
        "codeQuestVersion": {
          "type": "string"
        }
      },
      "description": "Environment information"
    },
    "context": {
      "type": "object",
      "properties": {
        "branch": {
          "type": "string",
          "description": "Current git branch"
        },
        "commitHash": {
          "type": "string",
          "description": "Current git commit hash"
        },
        "workingDirectory": {
          "type": "string",
          "description": "Current working directory"
        },
        "fileCount": {
          "type": "number",
          "description": "Number of files in scene directory"
        }
      },
      "description": "Additional context information"
    },
    "performance": {
      "type": "object",
      "properties": {
        "memoryUsage": {
          "type": "number",
          "description": "Memory usage in bytes"
        },
        "cpuTime": {
          "type": "number",
          "description": "CPU time in milliseconds"
        },
        "diskUsage": {
          "type": "number",
          "description": "Disk usage in bytes"
        }
      },
      "description": "Performance metrics (optional)"
    },
    "privacy": {
      "type": "object",
      "properties": {
        "anonymous": {
          "type": "boolean",
          "default": true,
          "description": "Whether this ping should be processed anonymously"
        },
        "canStore": {
          "type": "boolean",
          "default": true,
          "description": "Whether this data can be stored long-term"
        },
        "canShare": {
          "type": "boolean",
          "default": false,
          "description": "Whether this data can be shared with third parties"
        }
      },
      "description": "Privacy preferences for this activity ping"
    }
  }
}